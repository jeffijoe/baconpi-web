extends base_layout
block vars
  - activePage = 'Home';

mixin menuItem(text, url)
  - if (activePage == text)
      a(href=url).active.item=text
  - else
      a(href=url).item=text

block body
  .ui.teal.main.menu
    .left.menu
      a(href='/').title.item 
        img(src="/img/logo-small.png")#site-logo
        | BaconPi
    .right.menu
      +menuItem('Get Started', '/getstarted')
      +menuItem('Login', '/account')
      +menuItem('Register', '/account/signup')
      +menuItem('About', '/about')
       
  #front-page.wrapper
    block content
      
  footer#page-footer
